{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "**",
				"headers": [
					{
						"key": "Content-Security-Policy",
						"value": "script-src 'self' https://*apis.google.com"
					},
					{
						"key": "Access-Control-Allow-Origin",
						"value": "https://ls-ops-map.web.app"
					}
				]
			}
		]
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log"
			]
		}
	]
}
